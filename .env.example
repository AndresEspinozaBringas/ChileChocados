# ChileChocados - Environment Configuration
# Copiar este archivo a .env y configurar con tus datos reales

# Base de datos
DB_HOST=mysql.chilechocados.cl
DB_PORT=3306
DB_NAME=chilechocados
DB_USER=usuario
DB_PASS=contraseña

# Configuración de la aplicación
APP_NAME=ChileChocados
APP_ENV=development
APP_URL=http://localhost/chilechocados
APP_DEBUG=true

# Configuración de correo (Gmail SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=correo@chilechocados.cl
MAIL_PASSWORD=contraseña_app
MAIL_FROM=correo@chilechocados.cl
MAIL_FROM_NAME=ChileChocados

# Flow - Pasarela de Pagos
FLOW_API_KEY=tu_api_key_flow
FLOW_SECRET_KEY=tu_secret_key_flow
FLOW_API_URL=https://www.flow.cl/api
FLOW_SANDBOX=true

# Configuración de uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif
UPLOAD_PATH=uploads/

# Sesiones
SESSION_LIFETIME=7200
SESSION_NAME=chilechocados_session

# Seguridad
HASH_ALGO=bcrypt
HASH_COST=12
